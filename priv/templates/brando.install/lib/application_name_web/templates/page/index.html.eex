<%%
  hero_srcset = [
    {"small", "700w"},
    {"medium", "1200w"},
    {"large", "1800w"},
    {"xlarge", "2200w"}
  ]
%>
<section class="hero stretch" data-moonwalk-section>
  <div class="hero-bg">
    <div class="hero-slider">
      <%%= for {img, idx} <- Enum.with_index(@s.images) do %>
      <div class="hero-slide">
        <div class="">
          <%%= picture_tag img.image, :micro, class: "hero-slide-img", srcset: hero_srcset, cache: img.updated_at, prefix: media_url() %>
        </div>
      </div>
      <%% end %>
      <noscript>
        <%%= if Enum.count(@s.images) do %>
          <img src="<%% img_url(List.first(@s.images).image, :xlarge, prefix: media_url()) %>">
        <%% end %>
      </noscript>
    </div>
  </div>
  <%%= render <%= application_module %>Web.PageView, "_navigation.html", assigns %>
  <div class="about">
    <div class="container">
      <div class="row">
        Hero text
        <div class="logo" data-moonwalk>
          <%%= render <%= application_module %>Web.PageView, "__logo.html" %>
        </div>
      </div>
      <div class="centered-arrow" data-moonwalk>
        <a href="#content">
          <span class="arrow-d mt-3">â†“</span>
        </a>
      </div>
    </div>
  </div>
</section>

